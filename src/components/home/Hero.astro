---
import { Image } from "astro:assets";
import profile from "@data/profile.jpg";

const { name, about } = Astro.props;
---

<section>
  <div>
    <Image src={profile} loading="eager" alt="" class="profile" />
    <h1 class="dark:text-light"><span id="hero-im">I'm</span> <span id="hero-name" class="rainbow font-medium">{name.split(' ')[0]}</span>,</h1>
  </div>
  <div id="hero-about" class="dark:text-light sm:text-lg mt-4 mb-14">
    {about}
  </div>
</section>
<hr />