---
const { experience } = Astro.props
---
<div id="experience" class={"flex-col sm:flex-row dark:text-light mt-12"}>
    <div class={"flex items-center justify-between text-xs"}>
        <h2>EXPERIENCE</h2>
            <a
                href="/cv/SERGIO-VERA-ECV.pdf"
                id="cv-link"
                class="not-a text-button flex"
                download="SERGIO-VERA-ECV.pdf"
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <hr
                    class="text-button-separator"
                />
                &nbsp;Download CV
            </a>
    </div>
    <div class=" w-full mt-12">
        {experience?.length && experience.map((xp, i) => (
            <div class={"text-sm mb-10 md:px-2"}>
                <div class="flex justify-between items-center flex-wrap">
                    <span class="font-semibold text-xl">{xp.name}</span>

                    <span class="dark:text-gray my-2">{xp.start} - {xp.end}</span>
                </div>
                <div class="mt-0 mb-2 text-[--cyan]">{xp.location}</div>

                <div class="prose container leading-relaxed">
                    <ul>
                        {xp.description.map((xp, i) => (
                            <li class="dark:text-gray">{xp}</li>
                        ))}
                    </ul>
                </div>
            </div>
        ))}
    </div>
</div>