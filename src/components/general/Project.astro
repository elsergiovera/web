---
import { IProjectDetails } from "@types";

const { projectDetail } = Astro.props as IProjectDetails;
---

<>
  <h2 class="dark:text-light mt-8 mb-6">{projectDetail.title.toUpperCase()}</h2>
  <p class="mb-8">
    <video controls disablepictureinpicture controlslist="nodownload noplaybackrate">
      <source src="/assets/videos/video.mp4" type="video/mp4" />
    </video>
  </p>
  <p class="dark:text-light text-lg mb-16">
    {projectDetail.description}
  </p>
</>

