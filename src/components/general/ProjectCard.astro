---
import { Image } from "astro:assets";

const { project, hyperlink } = Astro.props;
const { title, name, url, github } = project.data;
const img = `/projects/${name}.png`;
const link = `/projects/${name}`;
---

<article class="w-full max-h-[25rem] overflow-hidden relative group">
  <div class="flex items-center absolute right-4 top-4 z-10">
    {
      github && (
        <a
          href={github}
          class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md"
          aria-label="Social Media"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
        </a>
      )
    }

    {
      url && (
        <a
          href={url}
          class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md ml-1"
          aria-label="Social Media"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
          </svg>
        </a>
      )
    }
  </div>
  
  {
    hyperlink ? (
      <a
        href={link}
        target={"_self"}
        >
          <Image
            src={img}
            class="card"
            loading="eager"
            width="20"
            height="20"
            alt="featureImage"
        />
      </a>
      ) : (
      <Image
        src={img}
        class="card"
        loading="eager"
        width="20"
            height="20"
        alt="featureImage"
      />
    )
  }

  {
    hyperlink && (
      <div class="absolute w-full bottom-0 left-0 backdrop-blur-md dark:text-white text-white bg-black/50 p-4 translate-y-[100%] group-hover:translate-y-0 transition duration-700">
        {title}
      </div> 
    )
  }
</article>
