---
const { title, subtitle } = Astro.props
const SITE_PATH_SEGMENT = import.meta.env.SITE_PATH_SEGMENT ?? "-"
const SITE_URL = import.meta.env.SITE_URL ?? "-"
const path_description =  subtitle 
  ? `${SITE_PATH_SEGMENT} ${subtitle}`
  : ""
---

<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />
<meta name="msapplication-TileColor" content="#da532c" />
<meta name="theme-color" content="#111111" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
{
  title && (
    <link rel="canonical" href={`${SITE_URL}${Astro.url.pathname}`} />
  )
}
{title && <title>{`${title} ${path_description}`}</title>}
{title && <meta name="title" content={`${title} ${path_description}`} />}
{subtitle && <meta name="description" content={subtitle} />}

<!-- Open Graph / Facebook -->
{title && <meta property="og:type" content="website" />}
{
  title && (
    <meta property="og:url" content={`${SITE_URL}${Astro.url.pathname}`} />
  )
}
{title && <meta property="og:title" content={`${title} ${path_description}`} />}
{subtitle && <meta property="og:description" content={subtitle} />}

<!-- Twitter -->
{title && <meta property="twitter:card" content="summary_large_image" />}
{
  title && (
    <meta
      property="twitter:url"
      content={`${SITE_URL}${Astro.url.pathname}`}
    />
  )
}
{title && <meta property="twitter:title" content={`${title} ${path_description}`} />}
{subtitle && <meta property="twitter:description" content={subtitle} />}

<!-- preload assests -->
<link
  rel="preload"
  href="/assets/fonts/Inter/Inter-Light.ttf"
  as="font"
  crossorigin
/>
<link
  rel="preload"
  href="/assets/fonts/Outfit/Outfit-SemiBold.ttf"
  as="font"
  crossorigin
/>
