---
import { IMetaHead } from "@types";
import { info } from "@data";

const { description } = Astro.props as IMetaHead;
---

<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />
<!-- <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" /> -->
<meta name="msapplication-TileColor" content="#da532c" />
<meta name="theme-color" content="#ffffff" />

<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
{
  info.title && (
    <link rel="canonical" href={`${info.baseUrl}${Astro.url.pathname}`} />
  )
}
{info.title && <title>{`${info.title} - portfolio`}</title>}
{info.title && <meta name="title" content={`${info.title} - portfolio`} />}
{description && <meta name="description" content={description} />}

<!-- Open Graph / Facebook -->
{info.title && <meta property="og:type" content="website" />}
{
  info.title && (
    <meta property="og:url" content={`${info.baseUrl}${Astro.url.pathname}`} />
  )
}
{info.title && <meta property="og:title" content={`${info.title} - ${info.name}`} />}
{description && <meta property="og:description" content={description} />}

<!-- Twitter -->
{info.title && <meta property="twitter:card" content="summary_large_image" />}
{
  info.title && (
    <meta
      property="twitter:url"
      content={`${info.baseUrl}${Astro.url.pathname}`}
    />
  )
}
{info.title && <meta property="twitter:title" content={`${info.title} - ${info.name}`} />}
{description && <meta property="twitter:description" content={description} />}

<!-- preload assests -->
<link
  rel="preload"
  href="/assets/fonts/Inter/Inter-Light.ttf"
  as="font"
  crossorigin
/>
<link
  rel="preload"
  href="/assets/fonts/Outfit/Outfit-SemiBold.ttf"
  as="font"
  crossorigin
/>
