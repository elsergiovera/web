---
import { getCollection } from 'astro:content';
import Layout from "@layouts/Layout.astro";
import ProjectCard from '@components/general/ProjectCard.astro';

export async function getStaticPaths() {
  const projectsEntries = await getCollection('projects');
  return projectsEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const path_segment = import.meta.env.SITE_PATH_SEGMENT;
const title = `${entry.collection} ${path_segment} ${entry.data.name}`
---

<Layout subtitle={title}>
  <div class="mt-6 mb-4">
    <h1 class="rainbow">{entry.data.title}</h>
  </div>

  <div class="mb-8">
    <ProjectCard project={entry} hyperlink={false} />
  </div>

  <div class="dark:text-light leading-relaxed">
    <Content />
  </div>
</Layout>